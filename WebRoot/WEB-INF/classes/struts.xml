				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="mydefault" />
		<global-results>
			<result type="json" name="error">
				<param name="root">result</param>
			</result>
		</global-results>
	</package>


